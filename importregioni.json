{
  "config": {
    "log": "debug"
  },
  "source" : {
    "file": { "path": "/home/fabiano/regioni.json" }
  },
  "extractor" : {
    "json": {}
  },
  "transformers" : [
    { "merge": { "joinFieldName": "name", "lookup": "Regione.name" } },
    { "vertex": { "class": "Regione"} },
    { "edge": {
      "class": "Confina",
      "joinFieldName": "neighbors",
      "lookup": "Regione.name",
      "unresolvedLinkAction": "CREATE"
    } }
  ],
  "loader" : {
    "orientdb": {
      "dbURL": "plocal:/home/fabiano/orientdb-3.1.0/databases/BigData",
      "dbUser": "admin",
      "dbPassword": "admin",
      "dbAutoDropIfExists": true,
      "dbAutoCreate": true,
      "dbType": "graph",
      "classes": [{"name": "Regione", "extends":"V"}, {"name": "Confina", "extends":"E"}],
      "indexes": [{"class":"Regione", "fields":["name:string"], "type":"UNIQUE_HASH_INDEX" }]
    }
  }
}
